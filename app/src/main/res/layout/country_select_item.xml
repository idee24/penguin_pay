<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="@dimen/eight_dp"
    android:layout_marginBottom="@dimen/eight_dp"
    android:background="?android:attr/selectableItemBackground"
    android:id="@+id/usBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/flagImageView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="@dimen/thirty_two_dp"
        android:layout_height="@dimen/thirty_two_dp"
        android:layout_marginEnd="@dimen/sixteen_dp"
        android:layout_marginStart="@dimen/twenty_four_dp"
        android:layout_marginTop="@dimen/eight_dp"
        android:layout_marginBottom="@dimen/eight_dp" />

    <TextView
        android:id="@+id/nameTextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/flagImageView"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/sixteen_dp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:textSize="@dimen/font_size_thirteen" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/dark_ash"/>

</androidx.constraintlayout.widget.ConstraintLayout>